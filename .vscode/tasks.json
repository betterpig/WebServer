{
    "tasks": [
        {
            "type": "shell",
            "label": "Compile",
            "command": "/usr/bin/gcc",
            "args": [
                "-g",
                "echo_server.c",
                "sigchldwait.c",
                "str_echo.c",
                "libunp.a",
                "-o","echo_server"
            ],
            "options": {
                "cwd": "${workspaceFolder}"
            },
            "problemMatcher": [
                "$gcc"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            }
        }
    ],
    "version": "2.0.0"
}